<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_driving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Driving"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_folding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_driving"
            android:layout_below="@+id/btn_driving"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Folding" />

        <Button
            android:id="@+id/btn_analog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_folding"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Remote Control" />

        <Button
            android:id="@+id/btn_layouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_analog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Layouts" />

        <Button
            android:id="@+id/btn_PID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_layouts"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="PID Position Control" />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_pose_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:text="Pose x:" />

        <TextView
            android:id="@+id/txt_pose_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Pose y:" />

        <TextView
            android:id="@+id/txt_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="50dp"
            android:text="Rotation:" />

        <EditText
            android:id="@+id/txt_pose_x_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_pose_x"
            android:layout_marginLeft="30dp"
            android:ems="5"
            android:inputType="numberSigned"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txt_pose_y_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_pose_y"
            android:layout_centerHorizontal="true"
            android:ems="5"
            android:inputType="numberSigned"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/txt_pose_rot_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_rotation"
            android:layout_below="@+id/txt_rotation"
            android:layout_marginRight="30dp"
            android:ems="5"
            android:inputType="numberSigned"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_submit_pose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_pose_y_value"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:text="Set Pose" />

    </RelativeLayout>

</LinearLayout>