<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_driving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="Driving"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_folding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_driving"
        android:layout_below="@+id/btn_driving"
        android:layout_marginTop="42dp"
        android:text="Folding"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/btn_analog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_folding"
        android:layout_below="@+id/btn_folding"
        android:layout_marginTop="44dp"
        android:text="Analog"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="128dp" />


</RelativeLayout>