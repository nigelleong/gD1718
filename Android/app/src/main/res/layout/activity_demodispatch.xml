<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_layoutCommunication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/srt"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:alpha="0.7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigationbox"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/txt_rideDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/descriptionFont"
            android:textColor="#000000"
            android:text="Your ride is on its way!"/>

        <Button
            android:id="@+id/btn_acknowledge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_rideDescription"
            android:layout_centerHorizontal="true"
            android:background="@drawable/whiteeclipse"
            android:layout_margin="20dp"
            android:text="Got it"/>

    </RelativeLayout>

</RelativeLayout>
